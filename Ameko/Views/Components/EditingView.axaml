<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:Ameko.ViewModels"
             mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="360"
			 x:DataType="vm:EditingViewModel"
             x:Class="Ameko.Views.Components.EditingView">
	<Panel>
		<TextBox TextWrapping="Wrap"
				   Text="{Binding SelectedEvent.Text, FallbackValue='he'}" />
	</Panel>
</UserControl>
