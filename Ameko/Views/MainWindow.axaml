<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="360"
        xmlns:vm="using:Ameko.ViewModels"
        xmlns:views="using:Ameko.Views"
        x:Class="Ameko.Views.MainWindow"
		x:DataType="vm:MainViewModel"
        Icon="/Assets/Ameko-Simplified-BG-64.ico"
        Title="{Binding WindowTitle}"
		Name="root">
	<Window.KeyBindings>
		<KeyBinding Gesture="Ctrl+N" Command="{Binding NewFileCommand}" />
        <KeyBinding Gesture="Ctrl+O" Command="{Binding ShowOpenFileDialogCommand}" />
        <KeyBinding Gesture="Ctrl+S" Command="{Binding ShowSaveFileDialogCommand}" />
        <KeyBinding Gesture="Ctrl+Shift+S" Command="{Binding ShowSaveAsFileDialogCommand}" />
        <KeyBinding Gesture="Ctrl+F" Command="{Binding ShowSearchDialogCommand}" />
        <KeyBinding Gesture="Shift+F1" Command="{Binding ShowAboutDialogCommand}" />
        <KeyBinding Gesture="Ctrl+Q" Command="{Binding QuitCommand}" />
	</Window.KeyBindings>
	
	<views:MainView />
</Window>
